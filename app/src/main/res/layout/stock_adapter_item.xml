<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ticker_adapter_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="AAPL"
            android:textSize="36sp" />


        <ImageView
            android:id="@+id/StockAdapterItemImg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:src="@drawable/stockphoto" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/StockAdapterMetaValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="46,227.08"
                android:textSize="20dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:gravity="right"/>

            <TextView
                android:id="@+id/StockAdapterMetaUpDown"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:textColor="@android:color/holo_green_light"
                android:text="+1.48%"
                android:textSize="15dp"
                android:layout_gravity="right"
                android:gravity="right"/>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/company_name_adapter_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Apple, Inc."
        android:textSize="12sp" />


</LinearLayout>